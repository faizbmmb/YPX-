@using TalentSearch.Web.Models.Configurations
<div class="card border-0 shadow-none">
    <div class="card-header">
        <!--begin::Search-->
        <div class="d-flex align-items-center position-relative my-1">
            <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-5">
                <span class="path1"></span>
                <span class="path2"></span>
            </i>
            <input type="text" data-kt-user-table-filter="search" class="form-control form-control-solid w-250px ps-13"
                placeholder="Search Scholar" />
        </div>
        <!--end::Search-->

        @if (@LoginSession.UserRole.Contains("Recovery"))
        {
            <div class="card-toolbar" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-trigger="hover">
                <button id="btn_SAA"
                    class="btn btn-sm shadow-sm btn-outline btn-outline-dashed btn-outline-primary btn-active-light-primary">
                    <i class="ki-duotone ki-exit-right-corner">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                    Submit Appendix A
                </button>
            </div>
            <div class="card-toolbar" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-trigger="hover">
                <button id="btn_DM"
                    class="btn btn-sm shadow-sm btn-outline btn-outline-dashed btn-outline-info btn-active-light-info">
                    <i class="ki-duotone ki-exit-right-corner">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                    Download Memo
                </button>
            </div>
            <div class="card-toolbar" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-trigger="hover">
                <button id="btn_UM"
                    class="btn btn-sm shadow-sm btn-outline btn-outline-dashed btn-outline-info btn-active-light-info">
                    <i class="ki-duotone ki-exit-right-corner">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                    Upload Memo
                </button>
            </div>
        }
        else if (@LoginSession.UserRole.Contains("Finance"))
        {
            <div class="card-toolbar" data-bs-toggle="tooltip" data-bs-placement="top-left" data-bs-trigger="hover">
                <button id="btn_AAA"
                    class="btn btn-sm shadow-sm btn-outline btn-outline-dashed btn-outline-success btn-active-light-success">
                    <i class="ki-duotone ki-exit-right-corner">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                    Approve Appendix A
                </button>
            </div>
        }
    </div>
    <div class="card-body">
        <table class="table table-hover align-middle table-row-dashed fs-6 gy-5" id="kt_table_appendix">
            <thead>
                <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
                    <th>No.</th>
                    <th>Scholar</th>
                    <th class="w-350px">Programme</th>
                    <th class="w-350px">Amount</th>
                    <th>Email Status</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
