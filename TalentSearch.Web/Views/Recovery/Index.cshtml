@{
    ViewData["Title"] = "Memo Listing";
    ViewData["TitleHeader"] = "Memo Listing";
    ViewData["TitleHeaderIcon"] = "ki-focus";
    ViewData["SubTitleHeader"] = "Recovery";
    ViewData["SubTitleCurrent"] = "Memo Listing";
    ViewData["ScholarIndex"] = "";
    ViewData["RecoveryIndex"] = "active";
    Layout = "_MasterPageSideBar";
}

@section CustomJavascript {
    <script src="assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script
        src="assets/js/custom/talentsearch/internal/scholar-index/tableMemoList.js?date=@DateTime.Now.ToString("yyyyMMddhhmmss")"></script>
}

<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
        <div class="d-flex align-items-center gap-2 gap-lg-3">

        </div>
    </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-xxl">
        <div class="card">
            <div class="stepper stepper-pills" id="kt_stepper_example_basic">
                <div class="card-body py-4 mx-2">
                    <table class="table table-hover align-middle table-row-dashed fs-6 gy-5" id="kt_table_memo">
                        <thead>
                            <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
                                <th>No.</th>
                                <th>Memo No</th>
                                <th>Title</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>