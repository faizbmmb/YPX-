@using TalentSearch.Core.Datawarehouse
@using TalentSearch.Web.Models.Configurations
@{
	tbl_datawarehouse _DataDW = (tbl_datawarehouse)ViewData["UserProfileDetail"];
}
<div class="card mb-5 mb-xl-10">
	<div class="card-body pt-9 pb-0">
		
		<div class="d-flex flex-wrap flex-sm-nowrap">
			
			<div class="me-7 mb-4">
				<div class="symbol symbol-100px symbol-lg-160px symbol-fixed position-relative">
					<div class="symbol-label fs-1 bg-light-warning text-warning">@_DataDW.tbl_Scholar.sch_name.Substring(0, 1)</div>
					<div class="position-absolute translate-middle bottom-0 start-100 mb-6 bg-success rounded-circle border border-4 border-body h-20px w-20px"></div>
				</div>
			</div>
			
			<div class="flex-grow-1">
				
				<div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
					
					<div class="d-flex flex-column">
						
						<div class="d-flex align-items-center mb-2">
							<a href="#" class="text-gray-900 text-hover-primary fs-2 fw-bold me-1">@_DataDW.tbl_Scholar.sch_name</a>
						</div>
						
						<div class="d-flex flex-wrap fw-semibold fs-6 mb-4 pe-2">
							<a href="#" class="d-flex align-items-center text-gray-500 text-hover-primary me-5 mb-2">
								<i class="ki-duotone ki-profile-circle fs-4 me-1">
									<span class="path1"></span>
									<span class="path2"></span>
									<span class="path3"></span>
								</i>@_DataDW.tbl_Scholar.sch_nric_new
							</a>
							<a href="#" class="d-flex align-items-center text-gray-500 text-hover-primary mb-2">
								<i class="ki-duotone ki-sms fs-4">
									<span class="path1"></span>
									<span class="path2"></span>
								</i>@_DataDW.tbl_Scholar.sch_email.ToLower()
							</a>
						</div>
						
					</div>
					
				</div>
				
				<div class="d-flex flex-wrap flex-stack">
					<div class="d-flex flex-column flex-grow-1 pe-8">

						<div class="d-flex flex-wrap">
							
							<div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
								<div class="fw-semibold fs-6 text-gray-500">Financed</div>
								<div class="d-flex align-items-center">
									<div class="fs-2 fw-bold" data-kt-countup="true" data-kt-countup-value="@_DataDW.tbl_dcps.amt_w_gst" data-kt-countup-prefix="MYR ">0</div>
								</div>
							</div>

							<div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
								<div class="fw-semibold fs-6 text-gray-500">Programme</div>
								<div class="d-flex align-items-center">
									<div class="fs-2 fw-bold" data-kt-countup="true" data-kt-countup-value="1">0</div>
								</div>
							</div>

							<div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
								<div class="fw-semibold fs-6 text-gray-500">Status</div>
								@{
									if(@_DataDW.tbl_Scholar.sch_prog_status == "TERMINATED"){
										<span class="badge py-3 px-4 fs-7 badge-light-danger">@_DataDW.tbl_Scholar.sch_prog_status</span>
									} else if(@_DataDW.tbl_Scholar.sch_prog_status == "UNKNOWN"){
										<span class="badge py-3 px-4 fs-7 badge-light-warning">@_DataDW.tbl_Scholar.sch_prog_status</span>
									} else if(@_DataDW.tbl_Scholar.sch_prog_status == "COMPLETED"){
										<span class="badge py-3 px-4 fs-7 badge-light-primary">@_DataDW.tbl_Scholar.sch_prog_status</span>
									} else if(@_DataDW.tbl_Scholar.sch_prog_status == "ACTIVE"){
										<span class="badge py-3 px-4 fs-7 badge-light-success">@_DataDW.tbl_Scholar.sch_prog_status</span>
									} else {
										<span class="badge py-3 px-4 fs-7 badge-light-primary">@_DataDW.tbl_Scholar.sch_prog_status</span>
									}
								}
							</div>

						</div>

					</div>
					
				</div>
				
			</div>
			
		</div>
		
		<ul class="nav nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-bold">
			
			<li class="nav-item mt-2">
				<a class="nav-link text-active-warning ms-0 me-10 py-5 @ViewData["OverviewTab"]" href="@Url.Action("ScholarOverview", "Internal", new { Id = _DataDW.tbl_Scholar.sch_nric_new })">Overview</a>
			</li>
			
			<li class="nav-item mt-2">
				<a class="nav-link text-active-warning ms-0 me-10 py-5 @ViewData["ProgrammeTab"]" href="@Url.Action("ScholarProgramme", "Internal", new { Id = _DataDW.tbl_Scholar.sch_nric_new })">Programme Details</a>
			</li>
			
			<li class="nav-item mt-2">
				<a class="nav-link text-active-warning ms-0 me-10 py-5 @ViewData["CertificationTab"]" href="@Url.Action("ScholarCertification", "Internal", new { Id = _DataDW.tbl_Scholar.sch_nric_new })">Certification</a>
			</li>
			
			<li class="nav-item mt-2">
				<a class="nav-link text-active-warning ms-0 me-10 py-5 @ViewData["EmploymentTab"]" href="@Url.Action("ScholarEmployment", "Internal", new { Id = _DataDW.tbl_Scholar.sch_nric_new })">Employment History</a>
			</li>
			
			<li class="nav-item mt-2">
				<a class="nav-link text-active-warning ms-0 me-10 py-5 @ViewData["EducationTab"]" href="@Url.Action("ScholarEducation", "Internal", new { Id = _DataDW.tbl_Scholar.sch_nric_new })">Educational Background</a>
			</li>
			
		</ul>
		
	</div>
</div>