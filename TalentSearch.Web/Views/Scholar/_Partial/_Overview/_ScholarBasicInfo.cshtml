@using TalentSearch.Core.Datawarehouse
@using TalentSearch.Web.Models.Configurations

@{
	tbl_datawarehouse _Data = (tbl_datawarehouse)@ViewData["UserProfileDetail"];
}

<div class="card mb-5 mb-xl-10" id="kt_profile_details_view">
	<div class="card-header cursor-pointer">
		<div class="card-title m-0">
			<h3 class="fw-bold m-0">Basic Information</h3>
		</div>
	</div>
	<div class="card-body p-9">
		<div class="card-title mb-7">
			<h4 class="fw-bold m-0">Personal Details</h4>
		</div>
		<div class="row mb-7">
			<label class="col-lg-4 fw-semibold text-muted">Full Name</label>
			<div class="col-lg-8">
				<span class="fw-semibold fs-6 text-gray-800">@_Data.tbl_Scholar.sch_name</span>
			</div>
		</div>
		<div class="row mb-7">
			<label class="col-lg-4 fw-semibold text-muted">Malaysian IC Number</label>
			<div class="col-lg-8">
				<span class="fw-semibold fs-6 text-gray-800">@_Data.tbl_Scholar.sch_nric_new</span>
			</div>
		</div>
		<div class="row mb-7">
			<label class="col-lg-4 fw-semibold text-muted">Date of Birth</label>
			<div class="col-lg-8">
				<span class="fw-semibold fs-6 text-gray-800">@_Data.tbl_Scholar.sch_dob</span>
			</div>
		</div>
		<div class="row mb-7">
			<label class="col-lg-4 fw-semibold text-muted">Gender</label>
			<div class="col-lg-8">
				<span class="fw-semibold fs-6 text-gray-800">@_Data.tbl_Scholar.sch_gender</span>
			</div>
		</div>
		<div class="row mb-7">
			<label class="col-lg-4 fw-semibold text-muted">Ethnicity</label>
			<div class="col-lg-8">
				<span class="fw-semibold fs-6 text-gray-800">@_Data.tbl_Scholar.sch_ethnicity</span>
			</div>
		</div>
		<div class="row mb-7">
			<label class="col-lg-4 fw-semibold text-muted">Marital Status</label>
			<div class="col-lg-8">
				<span class="fw-semibold fs-6 text-gray-800">@_Data.tbl_Scholar.sch_marital_status</span>
			</div>
		</div>
		<div class="card-title mb-7">
			<h4 class="fw-bold m-0">Contact Information</h4>
		</div>
		<div class="row mb-7">
			<label class="col-lg-4 fw-semibold text-muted">Email</label>
			<div class="col-lg-8">
				<a href="mailto:@_Data.tbl_Scholar.sch_email.ToLower()">
					<span class="fw-semibold fs-6 text-gray-800">@_Data.tbl_Scholar.sch_email.ToLower()</span>
				</a>
			</div>
		</div>
		<div class="row mb-7">
			<label class="col-lg-4 fw-semibold text-muted">Mobile Number</label>
			<div class="col-lg-8">
				<a href="tel:@_Data.tbl_Scholar.sch_mobile_num">
					<span class="fw-semibold fs-6 text-gray-800">@_Data.tbl_Scholar.sch_mobile_num</span>
				</a>
			</div>
		</div>
		<div class="row mb-7">
			<label class="col-lg-4 fw-semibold text-muted">House Telephone Number</label>
			<div class="col-lg-8">
				<a href="tel:@_Data.tbl_Scholar.sch_house_tel_num">
					<span class="fw-semibold fs-6 text-gray-800">@_Data.tbl_Scholar.sch_house_tel_num</span>
				</a>
			</div>
		</div>

	</div>
</div>